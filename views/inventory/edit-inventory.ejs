<% if (title) { %>
<h1 class="inventory-title"><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<!-- Add-Inventory Form -->
<div class="form-box new">
  <form id="updateForm" action="/inv/update" method="post">
    <div>
      <h4><i>ALL FIEDLS ARE REQUIRED</i></h4>
    </div>
    <div class="inv-label">
      <label for="classification_id">Classification </label>
      <%- selectList %>
    </div>
    <br />
    <div class="inv-label">
      <label for="make">Make</label>
      <input
        id="make"
        name="inv_make"
        type="text"
        placeholder="Min of 3 characters"
        value="<%= locals.inv_make %>"
      />
    </div>
    <div class="inv-label">
      <label for="model">Model</label>
      <input
        id="model"
        name="inv_model"
        type="text"
        placeholder="Min of 3 characters"
        value="<%= locals.inv_model %>"
      />
    </div>
    <div class="inv-label">
      <label for="description">Description </label>
      <textarea
        id="description"
        name="inv_description"
        class="large-textarea"
        placeholder=""
      >
  <%= locals.inv_description %></textarea
      >
    </div>
    <div class="inv-label">
      <label for="image">Image Path</label>
      <input
        id="image"
        name="inv_image"
        type="text"
        placeholder="Image"
        value="/images/vehicles/no-image.png"
      />
    </div>
    <div class="inv-label">
      <label for="thumbnail">Thumbnail Path</label>
      <input
        id="thumbnail"
        name="inv_thumbnail"
        type="text"
        placeholder="Thumbnail Image"
        value="/images/vehicles/no-image.png"
      />
    </div>
    <div class="inv-label">
      <label for="price">Price</label>
      <input
        id="price"
        name="inv_price"
        type="number"
        placeholder="decimal or integer"
        value="<%= locals.inv_price %>"
      />
    </div>
    <div class="inv-label">
      <label for="year">Year</label>
      <input
        id="year"
        name="inv_year"
        type="number"
        placeholder="4-digit year"
        value="<%= locals.inv_year %>"
      />
    </div>
    <div class="inv-label">
      <label for="miles">Miles</label>
      <input
        id="miles"
        name="inv_miles"
        type="number"
        placeholder="digits only"
        value="<%= locals.inv_miles %>"
      />
    </div>
    <div class="inv-label">
      <label for="color">Color</label>
      <input
        id="color"
        name="inv_color"
        type="text"
        placeholder=""
        value="<%= locals.inv_color %>"
      />
    </div>
    <br />
    <button type="submit" class="form-btn">Update Vehicle</button>
  </form>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.querySelector("form");
    const inputs = form.querySelectorAll("input, textarea");

    inputs.forEach((input) => {
      input.addEventListener("input", function () {
        validateInput(input);
      });
    });

    function validateInput(input) {
      let isValid = false;

      if (input.name === "inv_make" || input.name === "inv_model") {
        isValid = input.value.length >= 3;
      } else if (input.name === "inv_year") {
        isValid = /^\d{4}$/.test(input.value);
      } else if (input.name === "inv_description") {
        isValid = input.value.length >= 1 && input.value.length <= 150;
      } else if (input.name === "inv_image" || input.name === "inv_thumbnail") {
        isValid = input.value.length >= 3;
      } else if (input.name === "inv_price") {
        isValid = !isNaN(input.value) && input.value.length >= 1;
      } else if (input.name === "inv_miles") {
        isValid = /^\d+$/.test(input.value);
      } else if (input.name === "inv_color") {
        isValid = input.value.length >= 1;
      }

      if (isValid) {
        input.classList.remove("invalid");
        input.classList.add("valid");
      } else {
        input.classList.remove("valid");
        input.classList.add("invalid");
      }
    }
  });
</script>

