<% if (title) { %>
<h1 class="inventory-title"><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Display Messages -->
<%- messages() %>

<!-- Add-Inventory Error Display -->
<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<!-- Add-Inventory Form -->
<div class="form-box new">
  <form action="/inv/add-inventory" method="post">
    <div>
      <h4><i>ALL FIEDLS ARE REQUIRED</i></h4>
    </div>
    <div class="inv-label">
      <label for="select_classification">Classification </label>
      <%- selectList %>
    </div>
    <br />
    <div class="inv-label">
      <label for="make">Make</label>
      <input
        id="make"
        name="inv_make"
        type="text"
        placeholder="Min of 3 characters"
        required
        value="<%= locals.inv_make %>"
      />
    </div>
    <div class="inv-label">
      <label for="model">Model</label>
      <input
        id="model"
        name="inv_model"
        type="text"
        placeholder="Min of 3 characters"
        required
        value="<%= locals.inv_model %>"
      />
    </div>
    <div class="inv-label">
      <label for="description">Description </label>
      <textarea id="description" name="inv_description"  class="large-textarea" placeholder="" required >
<%= locals.inv_description %></textarea
      >
    </div>
    <div class="inv-label">
      <label for="image">Image Path</label>
      <input
        id="image"
        name="inv_image"
        type="text"
        placeholder="Image"
        required
        value="/images/vehicles/no-image.png"
      />
    </div>
    <div class="inv-label">
      <label for="thumbnail">Thumbnail Path</label>
      <input
        id="thumbnail"
        name="inv_thumbnail"
        type="text"
        placeholder="Thumbnail Image"
        required
        value="/images/vehicles/no-image-th.png"
      />
    </div>
    <div class="inv-label">
      <label for="price">Price</label>
      <input
        id="price"
        name="inv_price"
        type="number"
        placeholder="decimal or integer"
        required
        min="0"
        value="<%= locals.inv_price %>"
      />
    </div>
    <div class="inv-label">
      <label for="year">Year</label>
      <input
        id="year"
        name="inv_year"
        type="number"
        placeholder="4-digit year"
        required
        min="0"
        value="<%= locals.inv_year %>"
      />
    </div>
    <div class="inv-label">
      <label for="miles">Miles</label>
      <input
        id="miles"
        name="inv_miles"
        type="number"
        placeholder="digits only"
        required
        min="0"
        value="<%= locals.inv_miles %>"
      />
    </div>
    <div class="inv-label">
      <label for="color">Color</label>
      <input
        id="color"
        name="inv_color"
        type="text"
        placeholder=""
        required
        value="<%= locals.inv_color %>"
      />
    </div>
    <br />
    <button type="submit" class="form-btn">Add Vehicle</button>
  </form>
</div>
